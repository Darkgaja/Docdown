<UserControl x:Class="Docdown.Controls.DocumentViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:PdfViewer="clr-namespace:PdfiumViewer.Wpf;assembly=PdfiumViewer.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <PdfViewer:PdfViewer x:Name="Viewer"/>
        <!--<PdfViewer:PdfViewerHost x:Name="Viewer" Visibility="Collapsed" ZoomMode="FitWidth" ShowBookmarks="False" ShowToolbar="False"/>-->
        <TextBlock x:Name="Error" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Control x:Name="Spinner" 
                 Style="{StaticResource BusyAnimationStyle}" 
                 Visibility="Collapsed" 
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Center"/>
    </Grid>
</UserControl>