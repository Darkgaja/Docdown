<UserControl x:Class="Docdown.Controls.OutlineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:ViewModel="clr-namespace:Docdown.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{DynamicResource EditorBackground}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="{DynamicResource OverlayBrush}" 
                BorderBrush="{DynamicResource GrayBrush1}" 
                BorderThickness="0 0 0 1">
            <TextBlock Text="Outline" 
                       Foreground="{DynamicResource BlackBrush}" 
                       Margin="4 2" FontSize="{StaticResource DefaultFontSize}"/>
        </Border>
        <TreeView Grid.Row="1" Background="Transparent" ItemsSource="{Binding SelectedItem.Outline.Children, IsAsync=True}" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ItemContainerStyle="{StaticResource WorkspaceTreeViewItem}"
                  SelectedItemChanged="OutlineSelectedItemChanged" 
                  MouseDoubleClick="OutlineMouseDoubleClick">
            <TreeView.Resources>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}" DataType="{x:Type ViewModel:OutlineItemViewModel}">
                    <TextBlock Text="{Binding Data.Text}"
                               TextWrapping="Wrap" 
                               FontSize="{StaticResource DefaultFontSize}"/>
                    <!--<StackPanel Orientation="Horizontal">
                        -->
                    <!--<Rectangle Height="16" Width="16" Margin="4 0" Fill="{Binding IconName, Converter={StaticResource StringToResourceConverter}}"/>-->
                    <!--
                        
                    </StackPanel>-->
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</UserControl>
